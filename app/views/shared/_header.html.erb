<div class="flex flex-row p-2 mx-auto items-center justify-between px-8 h-20">
  <div class="flex flex-row items-center justify-start">
    <%= link_to "KIMOCHI", "/", class: "text-4xl sm:text-5xl font-bold text-blue-600 pr-8" %>
  </div>
  <% if user_signed_in? %>
    <div class="hidden sm:flex justify-center flex-grow items-center">
      <ul class="inline-flex grid-cols-5 gap-x-2 list-none items-center">
        <li>
          <%= link_to "マイページ", profile_path, class: "px-6 py-6 text-sm border-b-2 border-transparent leading-[22px] #{ header_profile_class } hover:text-blue-500" %>
        </li>
        <li>
          <%= link_to "新規グループ作成", new_group_path, class: "px-6 py-6 text-sm border-b-2 border-transparent leading-[22px] #{ header_group_new_class } hover:text-blue-500" %>
        </li>
        <li>
          <%= link_to "所属グループ一覧", groups_path, class: "px-6 py-6 text-sm border-b-2 border-transparent leading-[22px] #{ header_group_index_class } hover:text-blue-500" %>
        </li>
        <li>
              <%= button_to "ログアウト", destroy_user_session_path, method: :delete, data: {controller: "logout" }, class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] text-gray-500 hover:text-blue-500" %>
        </li>
        <li>
          <%= link_to "LINE友達追加", "https://lin.ee/9glV1vJ", class: "px-6 py-6 text-sm border-b-2 border-transparent leading-[22px] text-gray-500 hover:text-blue-500" %>
        </li>
      </ul>
    </div>


    <div class="sm:hidden">
      <div class="flex items-center justify-end">
        <details class="relative">
          <summary class="cursor-pointer text-sm">メニュー</summary>
          <ul class="bg-gray-50 rounded-t-none w-[132px] absolute right-auto">
            <li>
              <%= link_to "マイページ", profile_path, class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] #{ header_profile_class } hover:text-blue-500" %>
            </li>
            <li>
              <%= link_to "新規グループ作成", new_group_path, class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] #{ header_group_new_class } hover:text-blue-500" %>
            </li>
            <li>
              <%= link_to "所属グループ一覧", groups_path, class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] #{ header_group_index_class } hover:text-blue-500" %>
            </li>
            <li>
              <%= button_to "ログアウト", destroy_user_session_path, method: :delete, data: {controller: "logout" }, class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] text-gray-500 hover:text-blue-500" %>
            </li>
            <li>
              <%= link_to "LINE友達追加", "https://lin.ee/9glV1vJ", class: "px-2 sm:px-6 py-0 sm:py-2 text-xs sm:text-sm border-b-2 border-transparent leading-[22px] text-gray-500 hover:text-blue-500" %>
            </li>
          </ul>
        </details>
      </div>
    </div>

  <%else%>

    <div class="flex flex-row justify-end sm:justify-center items-end">
      <ul class="sm:items-center">
        <li>
          <%= link_to "LINE登録orログイン", user_line_omniauth_authorize_path, method: :post, class: "text-xs sm:text-sm border-b-2 border-transparent hover:border-blue-600 leading-[22px] text-gray-500 hover:text-blue-500" %>
        </li>
      </ul>
    </div>
  <%end%>
</div>