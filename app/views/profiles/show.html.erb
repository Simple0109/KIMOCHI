<div class="text-gray-500">
  <div class="mt-14">
    <div class="text-center text-3xl font-bold text-gray-800"><%= t("profiles.mypage") %></div>
  </div>
  <div class="container mx-auto flex px-5 py-20 md:flex-row flex-col items-start">
    <div class="flex justify-center items-start lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
      <% if @profile.avatar.attached? %>
        <%= image_tag(@profile.avatar_thumbnail)%>
      <%else%>
        <%= image_tag("/default_avatar.png")%>
      <%end%>

    </div>
    <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
      <div class="mb-5 leading-relaxed">
        <%= "#{t('profiles.name')}: #{@user.profile.name}" %>
      </div>
      
      <div class="mb-8 leading-relaxed">
        <%= "#{t('profiles.description')}: #{@user.profile.description}" %>
      </div>

      <div class="flex space-x-4"> <!-- space-x-4 はボタン間のスペースを調整する -->
        <%= link_to "編集", edit_profile_path, class: "w-36 px-3 py-4 text-center text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none" %>
        <%= link_to "個人リクエスト一覧", personal_requests_profile_path, class: "px-3 py-4 text-center text-white text-sm bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none" %>
      </div>
    </div>

  </div>
</div>