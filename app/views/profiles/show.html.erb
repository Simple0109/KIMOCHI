<div class="text-gray-500">
  <div class="mt-8 sm:mt-14">
    <div class="text-center text-2xl sm:text-3xl font-bold text-gray-800"><%= t("profiles.mypage") %></div>
  </div>
    <div class="container mx-auto flex-col items-center justify-center px-5 py-3">
      <div class="flex flex-col items-center justify-start w-full m-5 text-sm sm:text-base">
        <% if @profile.avatar.attached? %>
          <%= image_tag(@profile.avatar_thumbnail)%>
        <%else%>
          <%= image_tag("/default_avatar.png", size: "400x400")%>
        <%end%>
      </div>

      <div class="flex flex-col items-center justify-center m-5 w-full sm:max-w-md mx-auto">
        <div class="mb-5 leading-relaxed">
          <%= "#{t('profiles.name')}: #{@user.profile.name}" %>
        </div>
        <div class="mb-8 leading-relaxed">
          <%= "#{t('profiles.description')}: #{@user.profile.description}" %>
        </div>
      </div>

      <div class="flex-col sm:flex-row flex sm:space-x-4 justify-center">
        <div class="flex mb-4 sm:mb-0 justify-center"><%= link_to "編集", edit_profile_path, class: "w-36 px-2 sm:px-3 py-2 sm:py-4 text-sm sm:text-base text-center text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none" %></div>
        <div class="flex justify-center"><%= link_to "個人リクエスト一覧", personal_requests_path, class: "px-2 sm:px-3 py-2 sm:py-4 text-sm sm:text-base text-center text-white text-sm bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none" %></div>
      </div>
    </div>
  </div>
</div>