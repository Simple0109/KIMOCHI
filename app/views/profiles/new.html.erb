<div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
    <div class="container mx-auto">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Sign in</h1>
                <p class="text-gray-500 dark:text-gray-400">ユーザー情報登録</p>
            </div>
            <%= form_with model:@profile, url: profile_path, method: :post do |f| %>
              <div class="mb-6">
                <%= f.label :name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "らんてっくたろう",
                  class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
              </div>
              <div class="mb-6">
                <%= f.label :avatar, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
                <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar",
                  class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
              </div>
              <div class="mb-6">
                <%= f.label :description, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
                <%= f.text_area :description, autofocus: true, autocomplete: "description",
                  class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
              </div>
              <div class="mb-6">
                <%= f.submit "情報登録", class: "w-full px-3 py-4 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none" %>
              </div>
            <% end %>
        </div>
    </div>
</div>