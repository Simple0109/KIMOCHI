<div class="w-full mx-auto">
<% if @items.present? %> 
  <div class="items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid w-full grid-cols-1 gap-6 mx-auto lg:grid-cols-3">
    <% @items.each do |item| %>
      <% if item['itemUrl'].present? %>
        <div class="p-6 border">
          <%= link_to item['itemUrl'] do %>
            <%= image_tag(item['mediumImageUrls'][0], class: "object-cover object-center w-full mb-8 rounded-xl") %>
            <div class="inline-flex justify-between w-full">
              <span><%= number_to_currency(item['itemPrice'], format: "%u%n", unit: "ï¿¥") %></span>
            </div>
            <p class="mx-auto text-base font-medium leading-relaxed text-gray-500"><%= item['itemName'] %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<%end%>
</div>


